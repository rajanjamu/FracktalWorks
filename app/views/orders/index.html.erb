<div id="order-index">
  <h3>Service Orders</h3>

  <br>

  <div class="panel panel-default">
    <div class="panel-heading">Pending</div>
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="center">ID</th>
            <th>Title</th>
            <th>Recieved</th>
            <th class="center">Delete</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <% if order.status == false %>
              <tr>
                <td class="center"><%= order.id %></td>
                <td><%= link_to order.title, order_path(order)  %></td>
                <td><%= order.created_at.in_time_zone("Chennai").strftime("%d/%m/%Y %I:%M %p") %></td>
                <td class="center"><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-trash"), order_path(order), :method => :delete %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Completed</div>
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="center">ID</th>
            <th>Title</th>
            <th>Completed</th>
            <th class="center">Delete</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <% if order.status == true %>
              <tr>
                <td class="center"><%= order.id %></td>
                <td><%= link_to order.title, order_path(order)  %></td>
                <td><%= order.created_at.in_time_zone("Chennai").strftime("%d/%m/%Y %I:%M %p") %></td>
                <td class="center"><%= link_to content_tag(:span, "", class: "glyphicon glyphicon-trash"), "#" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

